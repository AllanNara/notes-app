<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>

        <div class="card-body">
            <form action="/notes/edit/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" style="height: 200px;">{{description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
            <form action="/notes/" method="GET">
                <button class="btn btn-inline btn-sm" type="submit">
                    Back to notes
                </button>
            </form>
        </div>
    </div>
</div>